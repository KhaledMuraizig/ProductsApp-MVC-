@model List<CityDTO>
@{
    ViewData["Title"] = "CityList";
    Layout = "~/Views/Shared/_SideMenu.cshtml";
}

<form  method="post">

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>City Name</th>
                <th>Country Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CityDTO item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Country.Name</td>

                    <td>
                        <input type="submit" value="Delete" class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id" />
                        <input type="submit" value="Edit" class="btn btn-secondary" asp-action="Edit" asp-route-Id="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mb-3 ms-3">

        <input type="submit" value="Add" asp-action="Index" class="btn btn-primary" />
    </div>
</form>
