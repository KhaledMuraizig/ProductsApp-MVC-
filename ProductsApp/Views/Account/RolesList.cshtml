@model List<RoleDTO>
@{
    ViewData["Title"] = "RolesList";
    Layout = "~/Views/Shared/_SideMenu.cshtml";
}
<form method="post">

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (RoleDTO item in Model)
            {
                <tr>
            <td>
                    @item.Name
            </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="mb-3 ms-3">

        <input type="submit" value="Add" asp-action="AddRole" class="btn btn-primary" />
    </div>

</form>

