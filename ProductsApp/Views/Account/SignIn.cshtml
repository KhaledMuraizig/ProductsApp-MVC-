@model SignInDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <form  method="post">

        @if (ViewData["Message"] != null)
        {
            <div class="mb-3 ms-3">
                <div class="alert alert-primary" role="alert">
                    @ViewData["Message"]
                </div>
            </div>
        }

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="mb-3 ms-3">
                        <label class="form-label">Username</label>
                        <input type="text" asp-for="Username" class="form-control" placeholder="Username">
                    </div>
                    <div class="mb-3 ms-3">
                        <label class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" asp-for="RememberMe">
                        <label class="form-check-label" >
                            Remember Me
                        </label>
                    </div>
                    <div class="mb-3 ms-3">
                        <input type="submit" value="Login" asp-action="Login" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
        </form>
</body>
</html>
